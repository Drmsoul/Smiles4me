



<div class="row">
  
  <lside><div class="col-md-3">
  	 <ul class="span5">

        <div class="panel panel-primary">
          <div class="panel-heading" align="center">
            <a href="#" class="thumbpic thumbnail">
              <% if @user.avatar.file? %>
                <%= image_tag @user.avatar.url(:thumb) %>
              <% else %>
                <%= image_tag("medium/Noimage.jpeg", size: "150x150", alt: "Avatar", class: "img-square") %>
              <% end %>
            </a>
            </br>
            <div class= "centered">
              <minititle>
                <span class="glyphicon glyphicon-user"></span>
                <%= @user.username %>
              </minititle>

            </div>
            </br>
            <%if current_user == @user%>
            <%= link_to "Edit my profile", edit_user_path(current_user.id) %>
            <%end%>
            <%if current_user.level>100%>
                <%= link_to "Edit this profile", edit_user_path(@user.id) %>
            <%end%>
          </div>
            <%= render 'shared/stats' %>
            <%= render 'follow_form' %>
        </div>
      </ul>
    </div>
  </lside>
  
  <div class="col-md-9">
		<div class="row">
		  <div class="col-sm-6 col-md-12">
		    <div class="thumbnail">
		      <div class="caption">


		        <h3>Galleries</h3>

            <%= render 'galleries/show' %>

		      </div>
		    </div>
		  </div>  
		</div>
  </div>




<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
</div>