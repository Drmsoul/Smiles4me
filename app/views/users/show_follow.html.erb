<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
                      <% if @user.avatar.file? %>
                        <%= image_tag @user.avatar.url(:thumb) %>
                      <% else %>
                        <%= image_tag("medium/Noimage.jpeg", size: "150x150", alt: "Avatar") %>
                      <% end %>
      <h1><%= @user.username %></h1>
      <span><%= link_to "view my profile", @user %></span>
      
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to @user.avatar.url(:square), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
